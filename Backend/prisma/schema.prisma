// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  supabaseId    String         @unique // Supabase auth user ID
  email         String         @unique
  firstName     String?
  lastName      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  integrations  Integration[]
  campaigns     Campaign[]

  @@map("users")
}

model Integration {
  id          String   @id @default(uuid())
  userId      String
  serviceName String   // e.g., "Apollo API", "LeadMagic", "IcyPeas", etc.
  apiKey      String   // Encrypted or plain (depending on your security requirements)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, serviceName])
  @@unique([serviceName, apiKey]) // Ensure API key is unique per service
  @@map("integrations")
}

model Campaign {
  id          String   @id @default(uuid())
  userId      String
  name        String   // Campaign name/title
  url         String   // The submitted URL
  data        Json?    // JSON field to store retrieved data
  status      String   @default("pending") // "pending", "completed", "failed"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("campaigns")
}

